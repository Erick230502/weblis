<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Jeguen Solutions' %></title>
    <meta name="description" content="Jeguen Solutions ofrece servicios integrales en manufactura, administración, abastecimiento, seguridad y operación. ¡Descubre nuestras soluciones!" />
    <meta name="keywords" content="Jeguen Solutions, manufactura, administración, abastecimiento, seguridad, operación, soluciones empresariales, servicios integrales" />
    <meta name="author" content="Jeguen Solutions" />
    
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body>
    <header class="main-header">
        <nav class="navbar">
            <div class="logo-area">
                <a href="/" class="logo-link" aria-label="Ir a la página de inicio de Jeguen Solutions">
                    <img src="/img/logop-2.png" alt="Logo de Jeguen Solutions" class="logo">
                    <div class="brand-text">
                        <h1>JEGUEN SOLUTIONS</h1>
                        <p class="tagline" >Servicios integrales en manufactura, <br> administración, abastecimiento, <br> seguridad y operación.</p> 
                    </div>
                </a>
            </div>
            <button class="menu-toggle" aria-label="Abrir menú de navegación">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>
            <ul class="nav-links">
                <!-- Se ha añadido la ruta raíz '/' antes del hash para asegurar la navegación a index.ejs -->
                <li><a href="/#inicio" class="nav-item">INICIO</a></li>
                <li><a href="/#filosofia" class="nav-item">FILOSOFÍA</a></li>
                <li><a href="/#nosotros" class="nav-item">NOSOTROS</a></li>
                <li><a href="/#servicios" class="nav-item">SERVICIOS</a></li>
                <li><a href="/#contacto" class="nav-item">CONTACTO</a></li>
            </ul>
        </nav>
    </header>

    <main id="main-content">
        <%- body %>
    </main>

    <footer class="main-footer">
        <div class="footer-bottom">
            <p>&copy; <%= new Date().getFullYear() %> Jeguen Solutions. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true,
            mirror: false,
        });

        const menuToggle = document.querySelector('.menu-toggle');
        const navLinks = document.querySelector('.nav-links');

        menuToggle.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            menuToggle.classList.toggle('active');
        });

        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                navLinks.classList.remove('active');
                menuToggle.classList.remove('active');
            }
        });

        // Opcional: Para un scroll suave cuando se usan los enlaces de anclaje
        document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                // Solo si el href es diferente de la ruta actual o si es la misma ruta con un ancla diferente
                if (this.pathname === window.location.pathname || this.pathname === '/' && window.location.pathname !== '/') {
                    const targetId = this.getAttribute('href').split('#')[1];
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        e.preventDefault(); // Evita el salto instantáneo
                        const headerOffset = document.querySelector('.main-header').offsetHeight; // Altura de tu cabecera fija
                        const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
                        const offsetPosition = elementPosition - headerOffset - 20; // 20px extra de margen

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: "smooth"
                        });
                    }
                }
            });
        });
    </script>
</body>
</html>