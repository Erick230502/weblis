document.addEventListener('DOMContentLoaded', function() {
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1, // Muestra 1 slide por vista en móvil
        spaceBetween: 30, // Espacio entre slides
        loop: true, // Carrusel infinito
