/* Estilos para cada slide/tarjeta de servicio */
.service-slide {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    height: 250px; 
    font-size: 1rem;
    display: flex;
    align-items: flex-end; 
    justify-content: center; 
    text-align: center;
    cursor: pointer;
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
}

/* NUEVO ESTILO: Para el enlace que envuelve la tarjeta */
.service-slide-link {
    position: absolute; 
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit; 
    flex-direction: column;
    justify-content: flex-end; 
    align-items: center; 
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
}

.service-slide:hover .service-slide-link {
    transform: translateY(-5px); 
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); 
}

/* Estilos para la imagen dentro del slide (dentro del enlace ahora) */
.service-slide-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7);
    transition: filter var(--transition-speed), transform var(--transition-speed); 
}

.service-slide:hover .service-slide-img {
    filter: brightness(0.5); /* Oscurece más la imagen al hacer hover */
    transform: scale(1.05); /* Zoom ligero en la imagen al hacer hover */
}

/* Estilos para la capa de superposición con el texto (nombre de la categoría) */
.service-slide-overlay {
    position: relative;
    z-index: 2; 
    width: 100%;
    padding: 1rem 1.5rem 1.5rem 1.5rem; 
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
    color: var(--light-text-color);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 1.1rem; 
    height: auto; 
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    text-align: center;
    transition: background var(--transition-speed);
}

.service-slide-overlay h3 {
    margin: 0;
    color: inherit;
    padding-bottom: 0.2rem;
    line-height: 1.2;
}

