        },
        breakpoints: {
            // Cuando la pantalla sea >= 768px
            768: {
                slidesPerView: 3, // Muestra 3 slides por vista
                spaceBetween: 30,
            },
            // Cuando la pantalla sea >= 1024px
            1024: {
                slidesPerView: 4, // Muestra 4 slides por vista
                spaceBetween: 40,
            },
            // Cuando la pantalla sea >= 1200px
            1200: {
                slidesPerView: 5, // Muestra 5 slides por vista
                spaceBetween: 50,
            }
        },
        // Integración con AOS
        on: {
            slideChangeTransitionEnd: function () {
