<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Busca el contenedor del carrusel con la clase "services-carousel"
    const servicesCarousel = document.querySelector('.services-carousel');

    // Mueve la inicialización de Swiper dentro de un `if` que comprueba si el carrusel existe.
    // Esto asegura que solo se inicialice si el EJS lo ha renderizado.
    if (servicesCarousel) {
        var swiper = new Swiper(servicesCarousel, {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: true,
            grabCursor: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            breakpoints: {
                768: {
                    slidesPerView: 3,
                    spaceBetween: 30,
                },
                1024: {
                    slidesPerView: 4,
                    spaceBetween: 40,
                },
                1200: {
                    slidesPerView: 5,
                    spaceBetween: 50,
                }
            },
            on: {
                slideChangeTransitionEnd: function () {
                    AOS.refresh();
                }
            }
        });
    }
});
</script>