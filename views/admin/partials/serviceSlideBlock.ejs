<div class="dynamic-item-block">
    <h4>Slide de Servicio #<%= index + 1 %></h4>
    <button type="button" class="remove-item-button"><i class="fas fa-trash-alt"></i> Eliminar</button>
    <div class="form-group">
        <label for="<%= parentFieldName %>[<%= index %>][name]">Nombre del Servicio:</label>
        <input type="text" id="<%= parentFieldName %>[<%= index %>][name]" name="<%= parentFieldName %>[<%= index %>][name]" value="<%= slide.name %>" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="<%= parentFieldName %>[<%= index %>][image]">URL de la Imagen:</label>
        <input type="text" id="<%= parentFieldName %>[<%= index %>][image]" name="<%= parentFieldName %>[<%= index %>][image]" value="<%= slide.image %>" class="form-control" required>
    </div>
</div>